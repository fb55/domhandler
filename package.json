{
    "type": "commonjs",
    "name": "domhandler",
    "version": "5.0.3",
    "description": "Handler for htmlparser2 that turns pages into a dom",
    "author": "Felix Boehm <me@feedic.com>",
    "funding": {
        "url": "https://github.com/fb55/domhandler?sponsor=1"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib/esm/index.js",
    "exports": {
        "import": "./lib/esm/index.js",
        "require": "./lib/index.js"
    },
    "sideEffects": false,
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc",
        "build:docs": "typedoc --hideGenerator --plugin typedoc-plugin-missing-exports src/index.ts",
        "build:esm": "tsc --module esnext --target es2019 --outDir lib/esm && echo '{\"type\":\"module\"}' > lib/esm/package.json",
        "format": "npm run format:es && npm run format:biome",
        "format:biome": "biome check --write .",
        "format:es": "npm run lint:es -- --fix",
        "lint": "npm run lint:es && npm run lint:biome",
        "lint:biome": "biome check .",
        "lint:es": "eslint .",
        "prepare": "npm run build",
        "test": "npm run test:jest && npm run lint",
        "test:jest": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/fb55/domhandler.git"
    },
    "keywords": [
        "dom",
        "htmlparser2"
    ],
    "engines": {
        "node": ">= 4"
    },
    "dependencies": {
        "domelementtype": "^2.3.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@eslint/compat": "^2.0.2",
        "@feedic/eslint-config": "^0.1.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^25.3.0",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "htmlparser2": "^10.1.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.6",
        "typedoc": "^0.27.9",
        "typedoc-plugin-missing-exports": "^3.1.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.56.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(.*)\\.js$": [
                "$1",
                "$1.js"
            ]
        }
    }
}
